<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dang_nhap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"

        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/_bg___4_1_homescreen"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/img" />


        <TextView
            android:id="@+id/welcome_to_lungo___"
            android:layout_width="191.6dp"
            android:layout_height="30.6dp"
            android:text="welcome_to_lungo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/login_continue"
            android:layout_width="191.6dp"
            android:layout_height="30.6dp"
            android:text="login continue"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/form_email___group_5"
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:background="@drawable/form_edt"
            android:hint="tên đăng nhập"
            android:textColor="@color/black"
            android:textColorHint="#828282" />


        <EditText
            android:id="@+id/form_email___group"
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:background="@drawable/form_edt"
            android:hint="mật khẩu"
            android:textColor="@color/black"
            android:textColorHint="#828282" />

        <Button
            android:id="@+id/button"
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:background="@drawable/form_backround_orange"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="348dp"
            android:layout_height="48dp"
            android:background="@drawable/form_backrou_white"
            android:backgroundTint="#D17842"
            android:text="Button" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="center" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>